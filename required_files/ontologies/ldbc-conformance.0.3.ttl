# added ldbc:referTo owl:propertyChainAxiom 

ldbc:referTo 
	rdf:type rdf:Property ; 
	rdfs:domain cwork:CreativeWork ; 
	rdfs:range bbc:Product ; 
	owl:propertyChainAxiom ( bbc:PrimaryContentOf bbc:product) . 
	     

# added ldbc:thumbnailType owl:propertyChainAxiom

ldbc:thumbnailType
	rdf:type rdf:Property ; 
	rdfs:domain cwork:CreativeWork ; 
	rdfs:range cwork:ThumbnailType ; 
	owl:propertyChainAxiom ( cwork:thumbnail cwork:thumbnailType) . 
