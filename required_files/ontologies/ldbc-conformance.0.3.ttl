#Additions to Core and Domain ontologies

# @cms.1.3.ttl

cms:locator
	owl:minCardinality "0"^^xsd:NonNegativeInteger ;
	owl:maxCardinality "1"^^xsd:NonNegativeInteger .         

# @cnews-1.3.ttl
 
 news:Event
 	owl:intersectionOf ( news:Person news:Organisation ) .
 
 news:Theme
 	owl:unionOf ( ldbc:Sport ldbc:Politics ldbc:Music ldbc:Art ) .
 
# @company.1.5.ttl

bbc:Blogs
	owl:differentFrom ( bbc:Education bbc:Music bbc:News ) .

bbc:HighWeb
	owl:differentFrom ( bbc:Mobile ) . 

bbc:Platform 
	     owl:oneOf ( bbc:HighWeb bbc:Mobile ) ; 
	     owl:minCardinality "0"^^xsd:NonNegativeInteger ;
	     owl:maxCardinality "1"^^xsd:NonNegativeInteger .    

bbc:Product
	owl:oneOf (bbc:Blogs bbc:Education bbc:Music bbc:News bbc:Sport) .   

bbc:primaryContent
	rdf:type owl:FunctionalProperty . 

bbc:primaryContentOf
	rdf:type owl:ObjectProperty ;
	rdfs:comment "Inverse of bbc:primaryContent"^^xsd:string ;
	rdfs:domain cwork:CreativeWork ; 
	rdfs:isDefinedBy bbc: ;
	rdfs:range bbc:WebDocument ;
	owl:inverseOf bbc:primaryContent . 

bbc:product
	owl:minCardinality "0"^^xsd:NonNegativeInteger ; 
	owl:maxCardinality "1"^^xsd:NonNegativeInteger .   

